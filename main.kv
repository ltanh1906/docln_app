<SearchBox@BoxLayout>:
    orientation: "vertical"
    size_hint_y: None
    height: "150dp"

    ScrollView:
        MDGridLayout:
            cols: 1
            adaptive_height: True
            MDBoxLayout:
                orientation: "vertical"
                padding: dp(10), dp(0)
                adaptive_height: True
                Widget:
                    id: separator
                    size_hint_y: None
                    height: 20
                MDTextField:
                    mode: "rectangle"
                    # multiline: True
                    hint_text: "Tên truyên hoặc tác giả: "
                    pos_hint:{'center_x':.5,'center_y':.2}
                    size_hint:1,None
                    min_height:"150dp"
                    max_height:"150dp"
            MDBoxLayout:
                orientation: "vertical"
                padding: dp(10), dp(10)
                adaptive_height: True
                MDRectangleFlatButton:
                    text: "[b]TÌM KIẾM[/b]"
                    theme_text_color: "Custom"
                    md_bg_color: "#3400e7"
                    line_color: "#3400e7"
                    text_color: "white"
                    elevation_normal: 0
                    size_hint: 1, None
                    pos_hint: {'center_x': .5, 'center_y': .5}
<ContentNavigationDrawer>
    MDNavigationDrawerMenu:
        MDNavigationDrawerHeader:
            title: "User"
            title_font_size: "30sp"
            text: "Welcome !!!"
            text_color: "#a3a3a3"
            text_font_size: "14sp"
            max_lines: 1
            spacing: "10dp"
            padding: 0, 0, 0, dp(5)
            source: "33.jpg"
        MDNavigationDrawerDivider:
        MDNavigationDrawerLabel:
            text: "Menu"
        DrawerClickableItem:
            text: "[size=14]Trang chủ[/size]"
            markup: True
            icon: "home"
            on_press:
                root.nav_drawer.set_state("close")
                root.screen_manager.current = "Strangchu"
        DrawerClickableItem:
            text: "[size=14]Bảng xếp hạng[/size]"
            markup: True
            icon: "medal"
            on_press:
                root.nav_drawer.set_state("close")
                root.screen_manager.current = "Strangdoc"
        DrawerClickableItem:
            text: "[size=14]Danh sách[/size]"
            markup: True
            icon: "book-search"
            on_release: app.show_search()

        MDNavigationDrawerDivider:

        MDNavigationDrawerLabel:
            text: "User"
        DrawerClickableItem:
            right_text: "[b][size=14]23[/size][/b]"
            text: "[size=14]Theo dõi[/size]"
            markup: True
            selected: True
            icon: "heart"
        DrawerClickableItem:
            text: "[size=14]Đổi mật khẩu[/size]"
            markup: True
            icon: "lock"
        DrawerClickableItem:
            text: "[size=14]Đăng xuất[/size]"
            markup: True
            icon: "logout"
            on_press:
                root.nav_drawer.set_state("close")
                root.screen_manager.current = "Slogin"
        MDNavigationDrawerDivider:
                    


MDScreen:

    MDTopAppBar:
        id: topappbar
        pos_hint: {"top": 1}
        elevation: 4
        title: "DocLN"
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]

    MDNavigationLayout:

        MDScreenManager:
            id: screen_manager
            
            Strangdoc:
                on_enter: app.hide_top_app_bar()
            Strangchu:
            SinfoNovel: 
            Slogin:

        MDNavigationDrawer:
            id: nav_drawer
            radius: (0, 16, 16, 0)

            ContentNavigationDrawer:
                screen_manager: screen_manager
                nav_drawer: nav_drawer